<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <template id="report_invoice_A5">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
          <t t-call="web.external_layout" t-lang="lang">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <div class="page" style="font-size: 0.6rem;">
                    <div id="invoice_header" class="row">
                        <div t-attf-class="#{'col-8' if report_type != 'html' else 'col-12 col-sm-8'} col-auto mb-2">
                            <div class="card mb-2">
                                <div class="card-header">
                                    <dl class="row mb-0">
                                        <dt class="col-auto col-4 col-sm-4 mb-0"><strong>CLIENTE</strong></dt>
                                        <dd class="col-auto col-8 col-sm-8 mb-0"/>
                                    </dl>
                                </div>
                                <div class="card-body">                                    
                                    <dl class="row mb-0">
                                        <dt class="col-auto col-4 col-sm-4 mb-0">
                                            <span class="text-nowrap" t-esc="o.partner_id.commercial_partner_id.l10n_latam_identification_type_id and o.partner_id.commercial_partner_id.l10n_latam_identification_type_id.name or 'DOCUMENTO'"/>:
                                        </dt>
                                        <dd class="col-auto col-8 col-sm-8 mb-0">
                                            <span class="text-nowrap" t-esc="o.partner_id.commercial_partner_id.vat or '00000000'"/>
                                        </dd>
                                    </dl>
                                    <dl class="row mb-0">
                                        <dt class="col-auto col-4 col-sm-4 mb-0">
                                            DENOMINACION:
                                        </dt>
                                        <dd class="col-auto col-8 col-sm-8 mb-0">
                                            <span class="text" t-field="o.partner_id.commercial_partner_id.name"/>
                                        </dd>
                                    </dl>
                                    <dl class="row mb-0">
                                        <dt class="col-auto col-4 col-sm-4 mb-0">
                                            DIRECCION:
                                        </dt>
                                        <dd class="col-auto col-8 col-sm-8 mb-0">
                                            <span class="text" t-esc="o.partner_id.street_name or ''"/> 
                                            <span class="text" t-esc="o.partner_id.street_number or ''"/> 
                                            <span class="text" t-esc="o.partner_id.street_number2 or ''"/> 
                                            <span class="text" t-esc="o.partner_id.street2 or ''"/>
                                            <t t-if="o.partner_id.l10n_pe_district">
                                                , <span class="text" t-esc="o.partner_id.l10n_pe_district.name or ''"/>
                                            </t>
                                            <t t-if="o.partner_id.city_id">
                                                , <span class="text-nowrap" t-esc="o.partner_id.city_id.name or ''"/>
                                            </t>
                                            <t t-if="o.partner_id.state_id">
                                                , <span class="text-nowrap" t-esc="o.partner_id.state_id.name or ''"/>
                                            </t>
                                            <t t-if="o.partner_id.country_id">
                                                , <span class="text-nowrap" t-esc="o.partner_id.country_id.name or ''"/>
                                            </t>
                                        </dd>
                                    </dl>
                                    <div class="row mb-0">
                                        <div class="col-auto col-6 col-sm-7 mb-0">
                                            <dl class="row mb-0">
                                                <dt class="col-auto col-7 col-sm-7 mb-0">
                                                    FECHA EMISION:
                                                </dt>
                                                <dd class="col-auto col-5 col-sm-5 mb-0">
                                                    <span class="text-nowrap" t-field="o.invoice_date"/>
                                                </dd>
                                            </dl>
                                            <dl class="row mb-0">
                                                <dt class="col-auto col-7 col-sm-7 mb-0">
                                                    FECHA DE VENC.:
                                                </dt>
                                                <dd class="col-auto col-5 col-sm-5 mb-0">
                                                    <span class="text-nowrap" t-field="o.invoice_date_due"/>
                                                </dd>
                                            </dl>
                                        </div>
                                        <div class="col-auto col-6 col-sm-5 mb-0">
                                            <dl class="row mb-0">
                                                <dt class="col-auto col-8 col-sm-8 mb-0">
                                                    MONEDA:
                                                </dt>
                                                <dd class="col-auto col-4 col-sm-4 mb-0">
                                                    <span class="text-nowrap" t-esc="o.currency_id.name == 'PEN' and 'Soles' or o.currency_id.currency_unit_label"/>
                                                </dd>
                                            </dl>
                                            <dl class="row mb-0" t-if="o.l10n_latam_document_type_id.internal_type == 'invoice'">
                                                <dt class="col-auto col-8 col-sm-8 mb-0">
                                                    TIPO DE PAGO:
                                                </dt>
                                                <dd class="col-auto col-6 col-sm-6 mb-0">
                                                    <t t-if="o.invoice_date_due and o.invoice_date == o.invoice_date_due">
                                                        Contado
                                                    </t>
                                                    <t t-else="">
                                                        Crédito
                                                    </t>
                                                </dd>
                                            </dl>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-12 col-sm-4'} col-auto mb-2 order-first order-sm-last">
                            <div class="card mb-3 text-center">
                                <div class="card-header">
                                    <h6>
                                        <span class="font-weight-bold">RUC <t t-esc="o.company_id.vat"/></span>
                                    </h6>
                                    <h6>
                                        <span class="font-weight-bold text-uppercase" t-esc="o.l10n_latam_document_type_id and o.l10n_latam_document_type_id.report_name or ''"/>
                                    </h6>
                                    <h6>
                                        <span class="font-weight-bold" t-esc="o.name or ''"/>
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>

                    <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                    
                    <table class="table table-sm o_main_table min-vh-50" name="invoice_line_table">
                        <thead>
                            <tr>
                                <th name="th_quantity" class="text-right"><span>CANT</span></th>
                                <th name="th_uom" class="text-right"><span>UM</span></th>
                                <th name="th_description" class="text-left"><span>CODIGO / DESCRIPCION</span></th>
                                <th name="th_valueunit" t-attf-class="text-right"><span>V/U</span></th>                               
                                <th name="th_priceunit" t-attf-class="text-right"><span>P/U</span></th>
                                <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>DESC.%</span>
                                </th>
                                <th name="th_subtotal" class="text-right">
                                    <span>IMPORTE</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                        </td>
                                        <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                        <td t-attf-class="text-right">
                                            <span class="text-nowrap" t-esc="abs(line.l10n_pe_edi_price_unit_excluded)"/>
                                        </td>
                                        <td t-attf-class="text-right">
                                            <span class="text-nowrap" t-esc="abs(line.l10n_pe_edi_price_unit_included)"/>
                                        </td>
                                        <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span class="text-nowrap" t-field="line.price_total"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <t t-if="o.is_detraction">
                        <table>
                                <tr>
                                    <br/>
                                    Operación sujeta SPOT cuenta de Detracción:
                                    <span t-field="o.company_id.account_number_bn"/>
                                </tr>
                                <tr>
                                    <br/>
                                    Valor referencial:
                                    <span t-field="o.referencial_value"/>
                                </tr>
                                <tr>
                                    <br/>Monto de detracción:
                                    <span t-field="o.invoice_detraction_amount"/>
                                </tr>
                        </table>
                    </t>

                    <div id="total" class="row">
                        <div t-attf-class="#{'col-8' if report_type != 'html' else 'col-12 col-sm-8'} col-auto mb-2">
                            <div class="card mb-2">
                                <div class="card-body">                     
                                    <t t-if="o.is_detraction">        
                                        <t t-set="net_amount" t-value="0" />                                    
                                        <t t-set="total_quotes" t-value="0" /> 
                                        <t t-if="o.invoice_payment_term_id">
                                            <t t-set="quotes" t-value="o.invoice_payment_term_id.compute(o.amount_total-o.invoice_detraction_amount, date_ref=o.invoice_date)" />
                                            <t t-foreach="quotes" t-as="quote">
                                                <t t-if="quote[0] &gt; o.invoice_date.strftime('%Y-%m-%d')">
                                                    <t t-set="net_amount" t-value="net_amount + float(quote[1])" />
                                                    <t t-set="total_quotes" t-value="total_quotes + 1" />
                                                </t>
                                            </t>
                                        </t>
                                        <t t-else="o.invoice_date_due and o.invoice_date &gt; o.invoice_date_due">
                                                <t t-set="net_amount" t-value="o.amount_total-o.invoice_detraction_amount" />
                                                <t t-set="total_quotes" t-value="1" />
                                        </t>                                            
                                    </t>
                                    <t t-else="">        
                                        <t t-set="net_amount" t-value="0" />                                    
                                        <t t-set="total_quotes" t-value="0" /> 
                                        <t t-if="o.invoice_payment_term_id">
                                            <t t-set="quotes" t-value="o.invoice_payment_term_id.compute(o.amount_total, date_ref=o.invoice_date)" />
                                            <t t-foreach="quotes" t-as="quote">
                                                <t t-if="quote[0] &gt; o.invoice_date.strftime('%Y-%m-%d')">
                                                    <t t-set="net_amount" t-value="net_amount + float(quote[1])" />
                                                    <t t-set="total_quotes" t-value="total_quotes + 1" />
                                                </t>
                                            </t>
                                        </t>
                                        <t t-else="o.invoice_date_due and o.invoice_date &gt; o.invoice_date_due">
                                            <t t-set="net_amount" t-value="o.amount_total" />
                                            <t t-set="total_quotes" t-value="1" />
                                        </t>                                            
                                    </t>
                                  
                                    <dl class="row mb-0" t-if="o.l10n_pe_edi_service_order">
                                        <dt class="col-auto col-6 col-sm-5 mb-0">
                                            PURCHASE/SERVICE ORDER:
                                        </dt>
                                        <dd class="col-auto col-6 col-sm-7 mb-0">
                                            <span class="text-nowrap" t-field="o.l10n_pe_edi_service_order"/>
                                        </dd>
                                    </dl>
                                    <t t-foreach="o.l10n_pe_edi_picking_number_ids" t-as="pick_number">
                                        <dl class="row mb-0">
                                            <dt class="col-6 col-sm-5 mb-0">
                                                <span t-field="pick_number.type"/>:
                                            </dt>
                                            <dd class="col-6 col-sm-7 mb-0" t-esc="pick_number.name"/>
                                        </dl>
                                    </t>
                                    <t t-foreach="o.l10n_pe_edi_transportist_picking_number_ids" t-as="pick_number">
                                        <dl class="row mb-0">
                                            <dt class="col-6 col-sm-5 mb-0">
                                                <span t-field="pick_number.type"/>:
                                            </dt>
                                            <dd class="col-6 col-sm-7 mb-0" t-esc="pick_number.name"/>
                                        </dl>
                                    </t>
                                    <dl class="row mb-0" t-if="o.invoice_date_due and o.invoice_date != o.invoice_date_due">
                                        <!-- dt class="col-auto col-6 col-sm-5 mb-0">
                                            PAYMENT TERMS:
                                        </dt>
                                        <dd class="col-auto col-6 col-sm-7 mb-0" t-esc="o.invoice_payment_term_id.name"/ -->
                                        <dt class="col-auto col-6 col-sm-5 mb-0">
                                            Información del crédito
                                        </dt>
                                    </dl>
                                    <dl class="row mb-0" t-if="o.invoice_payment_term_id or (o.invoice_date_due and o.invoice_date != o.invoice_date_due)">
                                        <dt class="col-auto col-5 col-sm-5 mb-0">
                                            Monto neto pendiente de pago:
                                        </dt>
                                        <dd class="col-auto col-7 col-sm-7 mb-0">
                                            <span t-esc="o.currency_id.symbol"/> 
                                            <span>
                                                <t t-if="o.is_detraction">
                                                    <t t-esc="'{0:,.2f}'.format(float(net_amount))" />
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="'{0:,.2f}'.format(float(net_amount))" />
                                                </t>                                   
                                            </span>
                                            <!-- span t-esc="net_amount" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/ -->
                                        </dd>
                                    </dl>
                                    <dl class="row mb-0" t-if="o.invoice_payment_term_id or (o.invoice_date_due and o.invoice_date != o.invoice_date_due)">
                                        <dt class="col-auto col-5 col-sm-5 mb-0">
                                            Total de cuotas:
                                        </dt>
                                        <dd class="col-auto col-7 col-sm-7 mb-0">
                                            <span t-esc="total_quotes"/>
                                        </dd>
                                    </dl>
                                    <dl class="row mb-0" t-if="o.invoice_payment_term_id">
                                        <dt class="col-auto col-10 col-sm-5 mb-0">
                                        <table class="table table-sm o_main_table min-vh-50">
                                            <thead>
                                                <tr>
                                                    <th name="th_quote" style="text-align: center;"><span>Nro. de cuota</span></th>
                                                    <th name="th_quote" style="text-align: center;"><span>Fecha de vencimiento</span></th>
                                                    <th name="th_quote" style="text-align: center;"><span>Monto</span></th>
                                                </tr>
                                            </thead>
                                            <tbody class="invoice_tbody">
                                                <t t-set="index" t-value="1"/><t t-if="o.is_detraction">
                                                        <t t-set="quotes" t-value="o.invoice_payment_term_id.compute(o.amount_total-o.invoice_detraction_amount, date_ref=o.invoice_date)" />
                                                        <t t-foreach="quotes" t-as="quote">
                                                            <t t-if="quote[0] &gt; o.invoice_date.strftime('%Y-%m-%d')">
                                                                <tr t-att-class="'o_line_note'">
                                                                    <td style="text-align: center;">
                                                                        <span>
                                                                            <t t-esc="index" />
                                                                        </span>
                                                                    </td>
                                                                    <td style="text-align: center;">
                                                                        <span>
                                                                            <t t-esc="quote[0]" />
                                                                        </span>
                                                                    </td>
                                                                    <td style="text-align: center;">
                                                                        <span t-esc="o.currency_id.symbol" />
                                                                        <span>
                                                                            <t t-if="o.is_detraction">
                                                                                <t t-esc="'{0:,.2f}'.format(float(quote[1]))" />
                                                                            </t>
                                                                            <t t-else="">
                                                                                <t t-esc="'{0:,.2f}'.format(float(quote[1]))" />
                                                                            </t>
                                                                        </span>
                                                                    </td>
                                                                </tr>
                                                                <t t-set="index" t-value="index + 1" />
                                                            </t>
                                                        </t>
                                                    </t>
                                                    <t t-else="">
                                                        <t t-set="quotes" t-value="o.invoice_payment_term_id.compute(o.amount_total, date_ref=o.invoice_date)" />
                                                        <t t-foreach="quotes" t-as="quote">
                                                            <t t-if="quote[0] &gt; o.invoice_date.strftime('%Y-%m-%d')">
                                                                <tr t-att-class="'o_line_note'">
                                                                    <td style="text-align: center;">
                                                                        <span>
                                                                            <t t-esc="index" />
                                                                        </span>
                                                                    </td>
                                                                    <td style="text-align: center;">
                                                                        <span>
                                                                            <t t-esc="quote[0]" />
                                                                        </span>
                                                                    </td>
                                                                    <td style="text-align: center;">
                                                                        <span t-esc="o.currency_id.symbol" />
                                                                        <span>
                                                                            <t t-if="o.is_detraction">
                                                                                <t t-esc="'{0:,.2f}'.format(float(quote[1]))" />
                                                                            </t>
                                                                            <t t-else="">
                                                                                <t t-esc="'{0:,.2f}'.format(float(quote[1]))" />
                                                                            </t>
                                                                        </span>
                                                                    </td>
                                                                </tr>
                                                                <t t-set="index" t-value="index + 1" />
                                                            </t>
                                                        </t>
                                                    </t>
                                                <tr/> 
                                            </tbody>
                                        </table>
                                        </dt>
                                    </dl>
                                    <dl class="row mb-0" t-else="o.invoice_date_due and o.invoice_date &gt; o.invoice_date_due">
                                        <dt class="col-auto col-10 col-sm-5 mb-0">
                                        <table class="table table-sm o_main_table min-vh-50">
                                            <thead>
                                                <tr>
                                                    <th name="th_quote" style="text-align: center;"><span>Nro. de cuota</span></th>
                                                    <th name="th_quote" style="text-align: center;"><span>Fecha de vencimiento</span></th>
                                                    <th name="th_quote" style="text-align: center;"><span>Monto</span></th>
                                                </tr>
                                            </thead>
                                            <tbody class="invoice_tbody">
                                                <tr t-att-class="'o_line_note'">
                                                    <td style="text-align: center;">
                                                        <span>1</span>
                                                    </td>
                                                    <td style="text-align: center;">
                                                        <span t-field="o.invoice_date_due" t-field-options='{"format": "yyyy-MM-dd"}'/>
                                                    </td>
                                                    <td style="text-align: center;">
                                                        <span t-esc="o.currency_id.symbol"/> 
                                                        <span>
                                                                <t t-if="o.is_detraction">
                                                                    <t t-esc="'{0:,.2f}'.format(float(net_amount))" />
                                                                </t>
                                                                <t t-else="">
                                                                    <t t-esc="'{0:,.2f}'.format(float(net_amount))" />
                                                                </t>  </span>
                                                    </td>    
                                                </tr>
                                                <tr/> 
                                            </tbody>
                                        </table>
                                        </dt>
                                    </dl>
                                    
                                    
                                    <dl class="row mb-0" t-if="o.narration">
                                        <dt class="col-auto col-6 col-sm-5 mb-0">
                                            OBSERVACIONES:
                                        </dt>
                                        <dd class="col-auto col-6 col-sm-7 mb-0" t-esc="o.narration"/>
                                    </dl>
                                    <dl class="row mb-0" t-if="o.l10n_latam_document_type_id.internal_type != 'invoice'">
                                        <dt class="col-auto col-6 col-sm-5 mb-0">
                                            RELATED DOCUMENT:
                                        </dt>
                                        <t t-set="l10n_pe_edi_reversal_serie" t-value="o.l10n_pe_edi_reversal_serie or ''" />
                                        <t t-set="l10n_pe_edi_reversal_number" t-value="o.l10n_pe_edi_reversal_number or ''" />
                                        <dd class="col-auto col-6 col-sm-7 mb-0" t-esc="l10n_pe_edi_reversal_serie + '-' + l10n_pe_edi_reversal_number"/>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-12 col-sm-4'} col-auto mb-2 order-first order-sm-last">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <tr class="o_subtotal" style="" t-if="o.l10n_pe_edi_amount_base">
                                    <td>
                                        <span><strong>GRAVADA </strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_amount_base"/>
                                    </td>
                                </tr>
                                <tr class="border-black o_subtotal" style="" t-if="o.l10n_pe_edi_amount_discount">
                                    <td>
                                        <span><strong>DESCUENTO (-)</strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_amount_discount"/>
                                    </td>
                                </tr>
                                <tr class="o_subtotal" style="" t-if="o.l10n_pe_edi_global_discount">
                                    <td>
                                        <span><strong>G. DISCOUNT (-)</strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_global_discount"/>
                                    </td>
                                </tr>
                                <tr class="o_subtotal" style="" t-if="o.l10n_pe_edi_amount_exonerated">
                                    <td>
                                        <span><strong>EXONERATED</strong></span>
                                    </td>
                                    <td class="text-right o_price_total">
                                        <span class="text-nowrap" t-field="o.l10n_pe_edi_amount_exonerated"/>
                                    </td>
                                </tr>
                                <tr class="o_subtotal" style="" t-if="o.l10n_pe_edi_amount_unaffected">
                                    <td>
